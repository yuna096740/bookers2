<div class="container">
  <div class="row">
    <div class="col-md-3 mt-3">
      <%= render'books/template', book: @book,user: current_user %>
    </div>

    <div class="col-md-8 offset-md-1 mt-3">

      <h2>Books 検索結果</h2>
      <div class="float-right">
        <%= link_to "戻る", :back %>
      </div>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= image_tag book.user.icon(80,80) %><br />
                    <%= link_to book.user.name, user_path(book.user.id) %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
                <td class="favorite_<%= book.id %>"><%= render 'favorites/favorite', book: book %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>