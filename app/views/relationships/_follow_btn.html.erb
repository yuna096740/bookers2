<% if current_user.following?(user) %>
  <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete, class:"btn btn-outline-danger btn-block", remote: true %>
<% else %>
  <%= link_to "Follow", user_relationships_path(user.id), method: :post, class:"btn btn-outline-info btn-block",  remote: true %>
<% end %>
