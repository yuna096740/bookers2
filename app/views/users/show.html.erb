<div class="container">
  <div class="row">
    <div class="col-md-3 mt-3">
      <h2>User info</h2>
       <%= image_tag @user.icon(100,100) %>
       <table class="table">
         <tr>
           <th>name</th>
           <th><%= @user.name %></th>
         </tr>
         <tr>
           <th>introduction</th>
           <th><%= @user.introduction %></th>
         </tr>
       </table>
        <% if @user.id == current_user.id %>
          <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% else %>
          <%= link_to user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do  %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
        <div class="form-group mt-3">
          <h2>New Book</h2>
          <%= form_with model: @book do |f| %>
            <div class="form">
              <p class="mb-1 mt-2">Title</p>
              <%= f.text_field :title,class:"form-control" %>
            </div>
            <div class="form">
              <p class="mb-1 mt-2">Opinion</p>
              <%= f.text_area :body, class:"form-control" %><br />
              <%= f.submit "Create Book", class:"btn btn-success text-white" %>
            </div>
          <% end %>
        </div>
    </div>

    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= image_tag book.user.icon(80,80) %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
                <% if @book.user == current_user %>
                  <td><%= link_to "Edit",edit_book_path(@book.id),class:"btn btn-success" %></td>
                  <td><%= link_to "Delete",book_path,method: :delete,class:"btn btn-danger" %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>

