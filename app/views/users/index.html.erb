<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render'books/template', book:@book,user:current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
          <% @users.each do |user| %>
            <tr>
              <th><%= image_tag user.icon(80,80) %></th>
              <th><%= user.name %></th>
              <th><%= link_to"Show", user_path(user.id) %></th>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>