<%= render'books/template', book:@book %>

<h1>Users#index　自分の投稿一覧画面</h1>
<h1>Books</h1>
<% @books.each do |book| %>
  <table>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <tr>
      <th><%= image_tag book.user.icon %></th>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
    </tr>
  </table>
<% end %>
